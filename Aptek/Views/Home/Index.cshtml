<!-- Banner -->
<section class="banner bgwhite p-t-40 p-b-40" style="margin-top:25px;">
    <div class="container">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-sm-10 col-md-8 col-lg-4 m-l-r-auto">
                    <!-- block1 -->
                    <div class="block1 hov-img-zoom pos-relative m-b-30">
                        <img src="~/Public/images/drugs/@category.Photo" alt="IMG-BENNER">

                        <div class="block1-wrapbtn w-size2">
                            <!-- Button -->
                            <a href="@Url.Action("index","drugs",new {id=category.Id})" class="flex-c-m size2 m-text2 bg3 hov1 trans-0-4">
                                @category.Name
                            </a>
                        </div>
                    </div>
                </div>
            }

      
        </div>
    </div>
</section>

