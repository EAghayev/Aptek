<!-- Banner -->
<section class="banner bgwhite p-t-40 p-b-40" style="margin-top:25px;">
    <div class="container">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-sm-10 col-md-8 col-lg-4 m-l-r-auto">
                    <!-- block1 -->
                    <div class="block1 hov-img-zoom pos-relative m-b-30">
                        <img src="~/Public/images/drugs/@category.Photo" alt="IMG-BENNER">

                        <div class="block1-wrapbtn w-size2">
                            <!-- Button -->
                            <a href="@Url.Action("index","drugs",new {id=category.Id})" class="flex-c-m size2 m-text2 bg3 hov1 trans-0-4">
                                @category.Name
                            </a>
                        </div>
                    </div>
                </div>
            }

      
        </div>
    </div>
</section>

<!-- Blog -->
<section class="blog bgwhite p-t-94 p-b-65">
    <div class="container">
        <div class="sec-title p-b-52">
            <h3 class="m-text5 t-center">
                Məqalələr
            </h3>
        </div>

        <div class="row">
            @foreach (var item in Model.Articles.Take(3))
            {
                <div class="col-sm-10 col-md-4 p-b-30 m-l-r-auto">
                    <!-- Block3 -->
                    <div class="block3">
                        <a href="@Url.Action("detail","blogs",new { id=item.Id})" class="block3-img dis-block hov-img-zoom" style="margin-bottom:12px;">
                            <img style="max-width:100%;height:250px;" src="~/Public/images/articles/@item.Photo" alt="IMG-BLOG">
                        </a>

                        <div class="block3-txt p-t-14">
                            <h4 class="p-b-7" style="height:60px;">
                                <a href="blog-detail.html" class="m-text11">
                                    @item.Title
                                </a>
                            </h4>
                            <span class="s-text6">Tarix:</span>
                            <span class="s-text7">@item.CreatedAt.Value.ToString("dd.MM.yyyy")</span>

                            <p class="s-text8 p-t-16">
                                @Html.Raw((item.Text != null && item.Text.Length > 250) ? item.Text.Substring(0, 250) + "..." : item.Text) <a style="font-weight:bold;" href="@Url.Action("detail","blogs",new { id=item.Id})">ardını oxu</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
